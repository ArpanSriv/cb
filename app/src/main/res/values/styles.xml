<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>

    </style>

    <style name="carbon_CardView_custom" parent="CardView">

    </style>

    <style name="WhiteTextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="Widget" />

    <style name="Widget.TextInputLayout">
        <item name="android:layout_height">@dimen/wrap_content</item>
        <item name="android:layout_width">@dimen/input_width</item>
        <item name="android:textColorHint">@color/color_input_hint</item>
    </style>

    <style name="Widget.TextEdit">
        <item name="android:layout_height">@dimen/match_parent</item>
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:textColorHighlight">@color/color_text_highlight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/color_input_hint</item>
        <item name="android:background">@drawable/state</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>

    <style name="Widget.Hint">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Custom-->
    <style name="MaterialLoginTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="MaterialLoginTheme.SelectableItemTheme">
        <item name="colorControlHighlight">@color/material_login_register_color</item>
    </style>

    <style name="MaterialLoginTheme.SelectableItemBackground">
        <item name="android:theme">@style/MaterialLoginTheme.SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="MaterialLoginTheme.TextAppearanceRegister">
        <item name="android:textColor">@color/material_login_login_color</item>
        <item name="colorControlNormal">@color/material_login_login_color</item>
        <item name="android:textColorHint">@color/material_login_login_color</item>
        <item name="colorControlActivated">@color/material_login_login_color</item>
        <item name="colorControlHighlight">@color/material_login_login_color</item>
    </style>

    <style name="MaterialLoginTheme.TextAppearanceLogin">
        <item name="android:textColor">@color/material_login_register_color</item>
        <item name="colorControlNormal">@color/material_login_register_color</item>
        <item name="android:textColorHint">@color/material_login_register_color</item>
        <item name="colorControlActivated">@color/material_login_register_color</item>
        <item name="colorControlHighlight">@color/material_login_register_color</item>
    </style>

    <style name="MaterialLoginTheme.TextAppearanceLoginError" parent="android:Widget.TextView">
        <item name="android:textColor">@color/material_login_login_error_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MaterialLoginTheme.TextAppearanceRegisterError" parent="android:Widget.TextView">
        <item name="android:textColor">@color/material_login_register_error_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.App.TextInputLayoutWhite" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteTextInputLayout">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="TextAppearance.App.TextInputLayoutBlack" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
